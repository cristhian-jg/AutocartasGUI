<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crisgon.autocartasgui">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".administrador.GestorCartasActivity" android:screenOrientation="landscape"></activity>
        <activity android:name=".administrador.AdminActivity"  android:screenOrientation="landscape"/>
        <activity
            android:name=".PreferencesActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".JuegoActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MenuActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>